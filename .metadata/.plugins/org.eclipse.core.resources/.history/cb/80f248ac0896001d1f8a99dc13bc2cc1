package student;

import java.util.ArrayList;
import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		// 학생 정보를 담을 ArrayList
		ArrayList<Student> array_student = new ArrayList<>();
		
		int choice = 0;
		System.out.println("======== 학생 관리 프로그램 ========");
		while (choice != 4) {
			System.out.print("[1]성적입력 [2]전체조회 [3]학생검색 [4]프로그램종료 >> ");
			choice = sc.nextInt();
			
			if (choice == 1) {
				System.out.println(1);
				System.out.print("이름 : ");
				String name = sc.next();
				System.out.print("학번 : ");
				String number = sc.next();
				System.out.print("Java점수 : ");
				int scoreJava = sc.nextInt();
				System.out.print("Web점수 : ");
				int scoreWeb = sc.nextInt();
				System.out.print("Androiod점수 : ");
				int scoreAndroid = sc.nextInt();
				
				Student stu = new Student(name, number, scoreJava, scoreWeb, scoreAndroid);
				array_student.add(stu);
				
			} else if (choice == 2) {
				System.out.println(2);
				findStudent(array_student);
			} else if (choice == 3) {
				System.out.println(3);
				System.out.println("검색 할 학생이름 >> ");
				String name = sc.next();
				for (int j = 0; j < array_student.size(); j++) {					
					if (array_student.get(j).getName().equals(name)) {
						System.out.println("이름 : " + array_student.get(j).getName());
						System.out.println("이름 : " + array_student.get(j).getNumber());
						System.out.println("ScoreJava" + array_student.get(j).getScoreJava());
						System.out.println("ScoreWeb" + array_student.get(j).getScoreWeb());
						System.out.println("ScoreAndroid" + array_student.get(j).getScoreAndroid());
						break;
					}
				}
				
			} else if (choice == 4) {
				System.out.println("학점 관리 프로그램을 종료합니다.");				
			}else {
				System.out.println("번호를 확인하세요.");
			}
		}
		
		
	}
	
	public static void findStudent(ArrayList<Student> array_student) {
		for (int i = 0; i < array_student.size(); i++) {
			System.out.println("이름 : " + array_student.get(i).getName());
			System.out.println("이름 : " + array_student.get(i).getNumber());
			System.out.println("ScoreJava" + array_student.get(i).getScoreJava());
			System.out.println("ScoreWeb" + array_student.get(i).getScoreWeb());
			System.out.println("ScoreAndroid" + array_student.get(i).getScoreAndroid());
		}
	}

}
