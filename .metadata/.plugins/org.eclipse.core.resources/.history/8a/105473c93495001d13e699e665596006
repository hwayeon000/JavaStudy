package 가변배열;

import java.util.ArrayList;
import java.util.Scanner;

public class Ex02플레이리스트만들기 {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		// 노래 제목이 저장되는 ArrayList music 만들기
		ArrayList<String> music = new ArrayList<>();
		//삽입
		music.add("Maria");
		music.add("HowYouLikeThat");
		music.add("깡");
		music.add("살짝설렜어");
		
		
		while (true) {
			System.out.print("[1]노래조회 [2]노래추가 [3]노래삭제 [4]종료 >>");
			int select = sc.nextInt();

			if (select == 1) {
				// 노래 조회
				// ArrayList에 있는 데이터 전부 가져와 확인
				System.out.println("=======현재 재생 목록=======");
				if (music.size() == 0) {
					System.out.println("재생 목록이 없습니다.");
				}else {
					for (int i = 0; i < music.size(); i++) {
						System.out.print(i + 1 + ". " + music.get(i));
						System.out.println();
					}
				}
				System.out.println("=========================");
			} else if (select == 2) {
				// 노래추가
				// ArrayList에 데이터 추가(문자열 데이터)
				// [1]원하는 위치 add(index, 데이터) 
				// [2]마지막 위치 add(데이터)
				System.out.println("=======현재 재생 목록=======");
				if (music.size() == 0) {
					System.out.println("재생 목록이 없습니다.");
				}else {
					for (int i = 0; i < music.size(); i++) {
						System.out.print(i + 1 + ". " + music.get(i));
						System.out.println();
					}
				}
				System.out.println("=========================");
				
				while (true) {
					System.out.print("[1]마지막 위치에 추가 [2]원하는 위치에 추가 >>");
					int choice = sc.nextInt();
					if (choice == 1) {
						System.out.print("추가할 노래 입력 >> ");
						music.add(sc.next());
						break;
					}else if (choice == 2) {
						System.out.print("추가할 노래 입력 >> ");
						String name = sc.next();
						System.out.print("추가할 위치 입력 >> ");
						music.add(sc.nextInt(), name);
						break;
					}  else {
						System.out.println("번호를 확인해 주세요.");
					}
					
				}
				System.out.println("추가가 완료되었습니다.");
			}else if (select == 3) {
				// 노래삭제
				// ArrayList에 있는 노래 한개 삭제
				// [1]선택한 노래 삭제 remove(index) 
				// [2]전체 삭제 clear
			}else if (select == 4) {
				break;
			} else {
				System.out.println("잘못 입력하셨습니다.");
			}
			
			
			
		}
		
		
		
		
	}

}
