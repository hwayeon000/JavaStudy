package festival;

import java.util.Scanner;

public class Ex18 {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		System.out.print("n 입력 : ");
		int num = sc.nextInt();
		
		int res = 0;
		for (int i = 0; i < num; i++) {
			res += i;
		}
		
		System.out.println(res);
	}

}
