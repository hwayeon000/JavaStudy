				// 정지
			} else if (choice == 3) {
				// 다음곡
			} else if (choice == 4) {
				// 이전곡
			} else if (choice == 5) {
				System.out.println("프로그램 종료");
			} else {
				
			}
			
			
			
			
			
		}


	}

}
