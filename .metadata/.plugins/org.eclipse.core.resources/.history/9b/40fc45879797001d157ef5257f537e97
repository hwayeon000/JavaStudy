		String a = "oooxoo";
		char[] arr = a.toCharArray();
		
		int res = 0;
		int cnt = 0;
		for (int i = 0; i < arr.length; i++) {
			if (arr[i]=='o') {
				cnt++;
				res += cnt;
			}else {
				cnt = 0;
			}
		}
		System.out.println(res);
		
		
		
		
		
		
		
