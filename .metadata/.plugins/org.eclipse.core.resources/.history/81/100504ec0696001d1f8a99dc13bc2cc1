package student;

import java.util.ArrayList;
import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		// 학생 정보를 담을 ArrayList
		ArrayList<Student> array_student = new ArrayList<>();
		Student stu = new Student(null, null, 0, 0, 0, 0);
		
		int choice = 0;
		while (choice != 4) {
			System.out.print("[1]성적입력 [2]전체조회 [3]학생검색 [4]프로그램종료 >> ");
			choice = sc.nextInt();
			
			if (choice == 1) {
				System.out.println(1);
				System.out.print("이름 : ");
				
				stu.setName(sc.next());
				System.out.print("학번 : ");
				stu.setNumber(sc.next());
				System.out.println("Java점수 : " + array_student);
				System.out.println("Web점수 : " + array_student);
				System.out.println("Androiod점수 : " + array_student);
				
				
			} else if (choice == 2) {
				System.out.println(2);
				
			} else if (choice == 3) {
				System.out.println(3);
				
			} else if (choice == 4) {
				System.out.println("학점 관리 프로그램을 종료합니다.");				
			}else {
				System.out.println("번호를 확인하세요.");
			}
		}
		
		
	}

}
